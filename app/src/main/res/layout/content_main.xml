<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button
        android:id="@+id/sendnotifsame"
        android:text="send notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/sendnotifnext"
        android:text="send next notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendnotifsame"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/send_map_notif"
        android:text="send map notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendnotifnext"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/send_voice_replay_notif"
        android:text="send voice replay notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_map_notif"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/send_pages_notif"
        android:text="send 2 pages notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_voice_replay_notif"
        android:layout_alignParentStart="true" />
</RelativeLayout>
